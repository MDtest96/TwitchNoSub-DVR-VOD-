{
    "name": "TwitchNoSub + DVR",
    "version": "1.0.0",
    "description": "Watch sub-only VODs and rewind live streams with DVR functionality",
    "manifest_version": 2,
    "icons": {
        "128": "assets/icons/icon.png"
    },
    "web_accessible_resources": [
        "src/firefox/app.js",
        "src/app.js",
        "src/patch_amazonworker.js",
        "src/dvr/dvr-tracker.js",
        "src/dvr/dvr-ui.js",
        "src/dvr/dvr-controller.js",
        "src/dvr/dvr-inject.js"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.twitch.tv/*"
            ],
            "js": [
                "src/restriction-remover.js",
                "src/firefox/twitchnosub.js",
                "src/twitchnosub.js",
                "src/dvr-loader.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "permissions": [
        "https://*.twitch.tv/*",
        "https://static.twitchcdn.net/assets/*",
        "https://gql.twitch.tv/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "twitchnosub@besuper.com",
            "strict_min_version": "58.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}